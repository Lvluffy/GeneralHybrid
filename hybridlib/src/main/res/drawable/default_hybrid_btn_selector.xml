<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/y50"/>
            <solid android:color="#50BDF5"/>
            <gradient
                android:angle="0"
                android:endColor="#50BDF5"
                android:startColor="#9950BDF5" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/y50"/>
            <solid android:color="#9950BDF5"/>
            <gradient
                android:angle="180"
                android:endColor="#50BDF5"
                android:startColor="#9950BDF5" />
        </shape>
    </item>
</selector>